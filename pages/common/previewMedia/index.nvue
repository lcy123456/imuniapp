export default {

    data () {
        return {
            list: [],
            current: 0,
            windowHeight: uni.getSystemInfoSync().windowHeight
        };
    },

    onLoad (options) {
        const { list, current } = options;
        this.list = JSON.parse(decodeURIComponent(list));
        this.current = current;
    },

    methods: {
        
    },
};
</script>

