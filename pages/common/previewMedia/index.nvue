<template>
    <swiper
        class="swiper_container"
        :current="current"
        :style="{height: windowHeight + 'px'}"
    >
        <swiper-item
            v-for="v in list"
            :key="v.url"
            :style="{height: windowHeight + 'px'}"
        >
            <image
                v-if="v.type === 'image'"
                :src="v.url"
                :style="{height: windowHeight + 'px'}"
                mode="aspectFit"
            />
            <video
                v-else-if="v.type === 'video'"
                :src="v.url"
                :style="{height: windowHeight + 'px'}"
                :poster="v.poster"
            />
        </swiper-item>
    </swiper>
</template>

<script>
